<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    
    <transport_descriptors>
        <transport_descriptor>
            <transport_id>udp_transport</transport_id>
            <type>UDPv4</type>
        </transport_descriptor>
    </transport_descriptors>

    <participant profile_name="udp_only_profile" is_default_profile="true">
        <rtps>
            <useBuiltinTransports>false</useBuiltinTransports>
            <userTransports>
                <transport_id>udp_transport</transport_id>
            </userTransports>
            <interfaceWhiteList>
                <address>10.22.0.12</address> <!-- Your VPN subnet -->
            </interfaceWhiteList>
            <builtin>
                <discovery_config>
                    <leaseDuration>
                        <sec>10</sec>
                        <nanosec>0</nanosec>
                    </leaseDuration>
                    <leaseAnnouncement>
                        <sec>2</sec>
                        <nanosec>0</nanosec>
                    </leaseAnnouncement>
                </discovery_config>
            </builtin>
        </rtps>
    </participant>
</profiles>